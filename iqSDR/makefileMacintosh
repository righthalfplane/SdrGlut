CXXFLAGS =  -std=c++11  -O2 -DWINDOWS_LONG_NAMES -I/usr/include  -I/opt/X11/include -I/opt/local/include `/opt/local/Library/Frameworks/wxWidgets.framework/Versions/wxWidgets/3.0/bin/wx-config --cxxflags` -Wall -DGL_SILENCE_DEPRECATION -Wno-return-type-c-linkage -Wno-deprecated-declarations

CCFILES= ./src/sdr.cpp ./src/mThread.cpp ./src/cMalloc.cpp ./src/iqSDR.cpp ./src/bStack.cpp ./src/sound.cpp ./src/getPalette.cpp ./src/send.cpp ./src/Clisten.cpp
 
CCOBJS = ./src/sdr.o ./src/mThread.o ./src/cMalloc.o ./src/iqSDR.o ./src/bStack.o ./src/sound.o ./src/getPalette.o ./src/send.o ./src/Clisten.o
 
fireball:  ${COBJS} ${CCOBJS}
	${CXX} ${CFLAGS}  -o iqSDR.x ${COBJS} ${CCOBJS}   -L/opt/local/lib -lrtaudio -lSoapySDR -lliquid -lsndfile  `/opt/local/Library/Frameworks/wxWidgets.framework/Versions/wxWidgets/3.0/bin/wx-config --cxxflags --libs --gl-libs` -lfftw3f
